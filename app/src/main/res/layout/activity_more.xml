<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".mvvm.view.MoreActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tv_more_title"
                android:textSize="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:src="@drawable/ic_mine"
                android:id="@+id/zuotouxiang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                ></ImageView>
            <TextView
                android:id="@+id/timeout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></TextView>
            <TextView
                android:id="@+id/tvtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></TextView>
                <com.tencent.smtt.sdk.WebView
                    android:id="@+id/tx5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ></com.tencent.smtt.sdk.WebView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <ImageView
                    android:id="@+id/ivzz"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    android:src="@drawable/ic_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ></ImageView>
                <TextView
                    android:id="@+id/tvzz"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ></TextView>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginLeft="150dp"
                    android:src="@drawable/ic_ljx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ></ImageView>
                <TextView
                    android:text="不喜欢"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                >
                <EditText
                    android:paddingLeft="40dp"
                    android:hint="写评论..."
                    android:background="@drawable/ridus"
                    android:layout_width="220dp"
                    android:layout_height="60dp"
                    ></EditText>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_xx"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ></ImageView>
                <ImageView
                    android:id="@+id/ivwjx"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_wjx"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ></ImageView>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_fx"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ></ImageView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>